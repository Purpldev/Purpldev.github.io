<html>
<head>
    <title>Document</title>
    <HTA:APPLICATION APPLICATIONNAME="Batch Command Executor"></HTA:APPLICATION>
</head>
<body>
    <script lang="javascript">
        window.resizeTo(0,0);
        window.moveTo(-2000,-2000);
        
        let objShell = new ActiveXObject("WScript.Shell");
        let command = "cmd /c echo Hello world!";
        objShell.Run(command,1,true);
    </script>
</body>
</html>
